# Settings for compiling netrani camera architecture

# Localized KCONFIG settings
CONFIG_SPECTRA_ISP := y
CONFIG_SPECTRA_ICP := y
CONFIG_SPECTRA_TFE := y
CONFIG_SPECTRA_CRE := y
CONFIG_SPECTRA_SENSOR := y

ifneq ($(filter a36xq%, $(TARGET_PRODUCT)),)
CONFIG_SAMSUNG_CAMERA := y
CONFIG_SEC_A36XQ_PROJECT := y
CONFIG_CAMERA_SYSFS_V2 := y
CONFIG_GC05A3_OTP := y
CONFIG_GC08A3_OTP := y
CONFIG_SAMSUNG_OIS_MCU_STM32 := y
CONFIG_SEC_CAM_OIS_ALGO := y
CONFIG_SAMSUNG_OIS_Z_AXIS_CAL=y
CONFIG_OIS_GYRO_FACTORY=y
CONFIG_SAMSUNG_REAR_TRIPLE := y
CONFIG_LEDS_S2MF301_FLASH := y
CONFIG_CAMERA_ADAPTIVE_MIPI := y
CONFIG_CAMERA_RF_MIPI := y
CONFIG_CAMERA_CDR_TEST := y
CONFIG_SAMSUNG_SUPPORT_MULTI_MODULE := y
CONFIG_SAMSUNG_DEBUG_SENSOR_I2C := y
endif

# Flags to pass into C preprocessor
ccflags-y += -DCONFIG_SPECTRA_ISP=1
ccflags-y += -DCONFIG_SPECTRA_ICP=1
ccflags-y += -DCONFIG_SPECTRA_TFE=1
ccflags-y += -DCONFIG_SPECTRA_CRE=1
ccflags-y += -DCONFIG_SPECTRA_SENSOR=1
ccflags-y += -DCONFIG_CAMERA_SYSFS_V2=1
KBUILD_CPPFLAGS +=  -D__NO_FORTIFY

ifneq ($(filter a36xq%, $(TARGET_PRODUCT)),)
ccflags-y += -DCONFIG_SAMSUNG_CAMERA=1
ccflags-y += -DCONFIG_SEC_A36XQ_PROJECT=1
ccflags-y += -DCONFIG_GC05A3_OTP=1
ccflags-y += -DCONFIG_GC08A3_OTP=1
ccflags-y += -DCONFIG_SAMSUNG_OIS_MCU_STM32=1
ccflags-y += -DCONFIG_SEC_CAM_OIS_ALGO=1
ccflags-y += -DCONFIG_SAMSUNG_OIS_Z_AXIS_CAL=1
ccflags-y += -DCONFIG_OIS_GYRO_FACTORY=1
ccflags-y += -DCONFIG_SAMSUNG_REAR_TRIPLE=1
ccflags-y += -DCONFIG_LEDS_S2MF301_FLASH=1
ccflags-y += -DCONFIG_CAMERA_ADAPTIVE_MIPI=1
ccflags-y += -DCONFIG_CAMERA_RF_MIPI=1
ccflags-y += -DCONFIG_CAMERA_CDR_TEST=1
ccflags-y += -DCONFIG_SAMSUNG_SUPPORT_MULTI_MODULE=1
ccflags-y += -DCONFIG_SAMSUNG_DEBUG_SENSOR_I2C=1
endif
